{% extends 'base.html.twig' %}

{% block title %}Moto{% endblock %}

{% block body %}

    {% set vendeuroradmin = ((app.user == moto.vendeur) or (is_granted("ROLE_ADMIN"))) %}
    <div class="jumbotron px-5 pt-3">
        <div class="container">
            <h1 class="text-center">{{ moto.marque.name }}  {{ moto.model }}</h1>
            <div class="rown justify-content-center">
                <div class="col-12 text-center">
                    <div class="">
                        {% if moto.images %}
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    {% for image in moto.images %}
                                        <div class="carousel-item {{ loop.first ? 'active' : ' ' }}">
                                            <img class="d-block w-75 m-auto"
                                                 src="{{ asset('/uploads/' ~ image.name)| imagine_filter('thumb') }}"
                                                 alt="Image">
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div>
                    <h2 class="text-center"></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped">
                <tr>
                    <td>Categorie</td>
                    <td>{{ moto.categorie.name }}</td>
                </tr>
                <tr>
                    <td>Cylindrée</td>
                    <td>{{ moto.cylindree }} cc</td>
                </tr>
                <tr>
                    <td>Année</td>
                    <td>{{ moto.year }}</td>
                </tr>
                <tr>
                    <td>Kilométrage :</td>
                    <td>{{ moto.kilometrage }}</td>
                </tr>
                <tr>
                    <td>Puissance din/fical</td>
                    <td>{{ moto.din }} / {{ moto.fisc }}</td>
                </tr>
                <tr>
                    <td>Moto compatible a2</td>
                    <td>{{ moto.a2 ? "Oui" : "Non" }}</td>
                </tr>
                <tr>
                    <td>Vendeur</td>
                    <td>{{ moto.vendeur.username}}</td>
                </tr>
            </table>
            <p>Publiée le : {{ moto.createdAt|date("d/m/Y") }} à {{  moto.createdAt|date("H:i") }}</p>
        </div>
    </div>

    {% if  (is_granted("ROLE_SUBSCRIBER")) %}
        {% if ( moto.vendeur != app.user ) %}
            <a href="{{ path('contactmoto_vendeur',{'moto': moto.id}) }}" class="btn btn-primary ">Contacter le
                vendeur</a>
        {% endif %}
    {% else %}
        <a href="{{ path('app_login') }}">Vous devez valider votre compte pour pouvoir contacter le vendeur</a>
    {% endif %}
    <div class="text-primary pt-0 text-right" style="font-size: 3rem; font-weight: bold">{{ moto.formattedPrice }}</div>
    <div>
        <a class="btn btn-dark" href="{{ path('moto_index') }}">Retourner à liste des motos d'occasion</a>
    </div>
    {% if vendeuroradmin %}
        <div>
            <a class="btn btn-danger my-3" href="{{ path('moto_edit', {'id': moto.id}) }}">Modifier l'annonce</a>
        </div>
    {% endif %}

        </div>

{% endblock %}
