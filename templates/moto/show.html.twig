{% extends 'base.html.twig' %}

{% block title %}Moto{% endblock %}

{% block body %}
    <h1>Moto</h1>
    {% if moto.filename %}
        <img src="/images/motos/{{ moto.filename }}" alt="photo-moto">
    {% endif %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moto.id }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ moto.filename }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ moto.formattedPrix }} €</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ moto.categorie.name }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ moto.marque.name }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ moto.year }}</td>
            </tr>
            <tr>
                <th>Kilometrage</th>
                <td>{{ moto.kilometrage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('moto_index') }}">back to list</a>

    <a href="{{ path('moto_edit', {'id': moto.id}) }}">edit</a>

    {{ include('moto/_delete_form.html.twig') }}
{% endblock %}
