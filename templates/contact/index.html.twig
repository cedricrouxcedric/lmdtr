{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue sur le formulaire de contact</h1>
        <div class="form-group">
            {{ form_start(contactForm) }}
            <div class="row col-3">
                {{ form_row(contactForm.nom,{'label': 'Votre nom d\'utilisateur', 'attr': {'class': 'foo'}}) }}
            </div>
            <div class="row col-3">
                {{ form_row(contactForm.email) }}
            </div>
            <div class="row col-3">
                {{ form_row(contactForm.message) }}
            </div>
            <div class="row col-3 mt-3">
                {{ form_row(contactForm.envoyer) }}
            </div>
            {{ form_end(contactForm) }}
        </div>
    </div>
{% endblock %}
