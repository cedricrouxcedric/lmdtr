{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th>ValidateAccount</th>
                <th>Rgpd</th>
                {% endif %}
                {% if is_granted('ROLE_SUBSCRIBER') %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roleString : '' }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                <td>{{ user.validateAccount ? 'Yes' : 'No' }}</td>
                <td>{{ user.rgpd ? 'Yes' : 'No' }}</td>
                {% endif %}
                {% if is_granted('ROLE_SUBSCRIBER') %}
                <td class="d-flex flex-column ">
                    <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                    {% endif %}
                    {% if is_granted('ROLE_SUPERADMIN') %}
                        <a href="{{ path('user_delete', {'id': user.id}) }}">Supprimer</a>
                    {% endif %}
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
